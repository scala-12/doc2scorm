<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:t='urn:import:com.github.gwtbootstrap.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:with field='msg' type='com.ipoint.coursegenerator.client.Messages' />
	<g:HTMLPanel>
		<t:Modal ui:field="lockScreen">
			<t:Well><ui:text from='{msg.waitMessage}'/></t:Well>
			<t:ProgressBar visible="true" type="ANIMATED" color="DEFAULT"
				percent="100" />
		</t:Modal>
		<t:Row>
			<t:Column size="6" offset="3">
				<t:Form styleName="form-horizontal" action="" method="get">
					<t:ControlGroup>
						<t:ControlLabel><ui:text from='{msg.orderSelectMessage}'/></t:ControlLabel>
						<t:Controls ui:field="radioGroup"></t:Controls>
					</t:ControlGroup>
					<t:ControlGroup>
						<g:HTMLPanel>
							<t:Controls>
								<g:Image ui:field="paypalButton"
									url="https://www.paypal.com/en_US/i/btn/btn_xpressCheckout.gif"></g:Image>
							</t:Controls>
						</g:HTMLPanel>
					</t:ControlGroup>
				</t:Form>
			</t:Column>
		</t:Row>
	</g:HTMLPanel>

</ui:UiBinder>
