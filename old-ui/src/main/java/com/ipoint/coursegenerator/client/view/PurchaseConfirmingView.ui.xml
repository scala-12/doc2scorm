<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:t='urn:import:com.github.gwtbootstrap.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:HTMLPanel>
		<t:Form styleName="form-horizontal">
			<t:ControlGroup>
				<t:ControlLabel>Description:</t:ControlLabel>
				<t:Controls>
					<t:ControlLabel ui:field="description"></t:ControlLabel>
				</t:Controls>
			</t:ControlGroup>
			<t:ControlGroup>
				<t:ControlLabel>Price:</t:ControlLabel>
				<t:Controls>
					<t:Heading ui:field="price" size="1"></t:Heading>
				</t:Controls>
			</t:ControlGroup>
			<t:ControlGroup>
				<t:Controls>
					<t:Button ui:field="submit" text="Buy Now" />
				</t:Controls>
			</t:ControlGroup>
		</t:Form>

	</g:HTMLPanel>

</ui:UiBinder>
